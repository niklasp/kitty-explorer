// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String     @default(cuid()) @id
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  String?
}

model User {
  id            String       @default(cuid()) @id
  name          String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  posts         Post[]
  @@map(name: "users")
}

model NFT {
  id            String       @default(cuid()) @id
  token_id      String       @unique
  forsale       String       @default("0")
  description   String?
  metadata_uri  String
  is_metadata_fetched Boolean @default(false)
  actions       Action[]
}

model Action {
  id            String       @default(cuid()) @id
  type          OP
  block         String
  nft           NFT?         @relation(fields: [nft_id], references: [id])
  nft_id        String
}

enum OP {
  BUY
  MINT
  LIST
  RESADD
}
